# Example environment variables
# Copy this file to .env and set your real secrets there locally.
# Do NOT commit .env with secrets to the repository.

# Optional: OpenRouter API key (do NOT commit your real key)
# OPENROUTER_API_KEY=sk-...

# Optional: override default OpenRouter model
# OPENROUTER_MODEL=openrouter/sonoma-dusk-alpha
# ΞKernel Environment Configuration
# Copy this to .env and add your API keys

# OpenRouter Configuration (Recommended - Access to multiple providers)
OPENROUTER_API_KEY=sk-or-v1-your-key-here
OPENROUTER_MODEL=openrouter/sonoma-dusk-alpha
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_TEMPERATURE=0.7
OPENROUTER_MAX_TOKENS=2000
OPENROUTER_SITE_NAME=ΞKernel
OPENROUTER_FORCE=false

# (OpenAI/Anthropic intentionally omitted – this project uses OpenRouter only)

# Kernel Configuration
KERNEL_MAX_RECURSION_DEPTH=10
KERNEL_ENABLE_VECTOR_SYNC=true
KERNEL_LOG_LEVEL=info

# Cost Controls
MAX_DAILY_COST=10.00
WARN_COST_THRESHOLD=5.00
ENABLE_COST_TRACKING=true